@model PayrollManagementSystem_Sprint2.Models.TimeSheet

@{
    ViewData["Title"] = "Approve Timesheets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1>Approve Timesheets</h1>

@if (ViewBag.Message != null)
{
    <p style="color:@ViewBag.Color">@ViewBag.Message</p>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditTimesheet">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IndexTs" />
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <input asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId" readonly></input>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimesheetId" class="control-label"></label>
                <input asp-for="TimesheetId" class="form-control" readonly />
                <span asp-validation-for="TimesheetId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkDate" class="control-label"></label>
                <input asp-for="WorkDate" class="form-control" readonly />
                <span asp-validation-for="WorkDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeActivity" class="control-label"></label>
                <input asp-for="EmployeeActivity" class="form-control" readonly />
                <span asp-validation-for="EmployeeActivity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkMonth" class="control-label"></label>
                <input asp-for="WorkMonth" class="form-control" readonly />
                <span asp-validation-for="WorkMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfHoursSpent" class="control-label"></label>
                <input asp-for="NumberOfHoursSpent" class="form-control" readonly />
                <span asp-validation-for="NumberOfHoursSpent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalHoursPerDay" class="control-label"></label>
                <input asp-for="TotalHoursPerDay" class="form-control" readonly />
                <span asp-validation-for="TotalHoursPerDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="True">Accept</option>
                    <option value="False">Decline</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="EmployeeTimesheets">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



