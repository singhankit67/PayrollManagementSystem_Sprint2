@model PayrollManagementSystem_Sprint2.Models.PayrollMaster

@{
    ViewData["Title"] = "EditGradeDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditGradeDetails</h1>

<h4>PayrollMaster</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditGradeDetails">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeId" />
            <div class="form-group">
                <label asp-for="EmployeeGrade" class="control-label"></label>
                <select asp-for="EmployeeGrade" class="form-control" asp-items="ViewBag.EmployeeGrade">
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                    <option value="E">E</option>
                </select>
                <span asp-validation-for="EmployeeGrade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeDesignation" class="control-label"></label>
                <input asp-for="EmployeeDesignation" class="form-control" maxlength="20"/>
                <span asp-validation-for="EmployeeDesignation" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="PayrollReport">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
